{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "gox-framework-config",
  "title": "GOX Framework Configuration",
  "type": "object",
  "properties": {
    "framework": {
      "type": "object",
      "properties": {
        "name": {"type": "string", "const": "GOX"},
        "version": {"type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$"},
        "agents": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {"type": "string"},
              "type": {"type": "string", "enum": ["analyzer", "processor", "transformer"]},
              "config": {"type": "object"},
              "dependencies": {
                "type": "array",
                "items": {"type": "string"}
              },
              "capabilities": {
                "type": "array",
                "items": {"type": "string"}
              }
            },
            "required": ["id", "type"]
          }
        }
      },
      "required": ["name", "version", "agents"]
    },
    "pipelines": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "description": {"type": "string"},
          "stages": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {"type": "string"},
                "agent_id": {"type": "string"},
                "input": {"type": "string"},
                "output": {"type": "string"},
                "parallel": {"type": "boolean", "default": false}
              },
              "required": ["name", "agent_id"]
            }
          }
        },
        "required": ["id", "stages"]
      }
    },
    "storage": {
      "type": "object",
      "properties": {
        "type": {"type": "string", "enum": ["memory", "disk", "distributed"]},
        "path": {"type": "string"},
        "encryption": {"type": "boolean", "default": false},
        "compression": {"type": "boolean", "default": true},
        "retention": {
          "type": "object",
          "properties": {
            "duration": {"type": "string"},
            "policy": {"type": "string", "enum": ["delete", "archive", "compress"]}
          }
        }
      },
      "required": ["type"]
    }
  },
  "required": ["framework"],
  "additionalProperties": false
}